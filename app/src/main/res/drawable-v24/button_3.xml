<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape
            android:shape="rectangle">
            <solid android:color="@color/colorDefaultNoteColor" />
            <corners android:radius="@dimen/_30sdp"/>
        </shape>
    </item>
    <item  android:bottom="1dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:startColor="@color/colorNoteSubtitleText"
                android:endColor="@color/colorNoteSubtitleText"/>
            <stroke android:width="1dp" android:color="@color/colorIcon"/>
            <corners android:radius="@dimen/_30sdp"></corners>
        </shape>
    </item>
    <item  android:bottom="1dp" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:startColor="@color/colorNoteSubtitleText"
                android:endColor="#00FFFFFF" android:angle="270"/>
            <stroke android:width="1dp" android:color="@color/colorDefaultNoteColor"/>
            <corners android:radius="@dimen/_30sdp"></corners>
        </shape>
    </item>
</layer-list>
